<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="xbh_supplier.list">
      <field name="name">xbh_supplier list</field>
      <field name="model">xbh_supplier.xbh_supplier</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="xbh_supplier.action_window">
      <field name="name">xbh_supplier window</field>
      <field name="res_model">xbh_supplier.xbh_supplier</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="xbh_supplier.action_server">
      <field name="name">xbh_supplier server</field>
      <field name="model_id" ref="model_xbh_supplier_xbh_supplier"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="xbh_supplier" id="xbh_supplier.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="xbh_supplier.menu_1" parent="xbh_supplier.menu_root"/>
    <menuitem name="Menu 2" id="xbh_supplier.menu_2" parent="xbh_supplier.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="xbh_supplier.menu_1_list" parent="xbh_supplier.menu_1"
              action="xbh_supplier.action_window"/>
    <menuitem name="Server to list" id="xbh_supplier" parent="xbh_supplier.menu_2"
              action="xbh_supplier.action_server"/>

  </data>
</odoo>
